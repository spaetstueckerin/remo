<h2>Heißwasserproduktion</h2>
<table class="zentriert">
  <tr>
    <th>Kesselname</th>
    <th>Hersteller</th>
    <th>Baujahr</th>
    <th>Leistung</th>
    <th>Brennertyp</th>
    <th>Hersteller</th>
    <th>Baujahr</th>
    <th width=100>Aktion</th>
  </tr>

<% HotWaterProduction.all.each do |hot_water_production| %>
  <tr>
    <td><%= hot_water_production.kettleName %></td>
    <td><%= hot_water_production.kettleManufacturer %></td>
    <td><%= hot_water_production.kettleManuYear %></td>
    <td><%= hot_water_production.kettleCapacity %></td>
    <td><%= hot_water_production.burnerType %></td>
    <td><%= hot_water_production.burnerManufacturer %></td>
    <td><%= hot_water_production.burnerManuYear %></td>    
    <td><%= link_to image_tag("show.png", size: "20x20", alt: "Anzeigen"), hot_water_production %>
    <%= link_to image_tag("edit.png", size: "20x20", alt: "Bearbeiten"), edit_hot_water_production_path(hot_water_production)  %>
