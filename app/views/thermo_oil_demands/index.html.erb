<h1>Bedarfszeiträume Thermoöl</h1>

<table>
  <tr>
    <th>Thermoölverbrauch</th>
    <th>Verbraucher</th>
    <th>Datum</th>
    <th>Von</th>
    <th>Bis</th>

    <!--<th>Year</th>-->

    <th>Aktion</th>
  </tr>

<% @thermo_oil_demands.each do |thermo_oil_demand| %>
  <tr>
    <td><%= thermo_oil_demand.thermoOilConsumptionYear_id %></td>
    <td><%= thermo_oil_demand.machinery_id %></td>
    <td><%= thermo_oil_demand.demandDate.strftime('%d.%m.%Y') %></td>
    <td><%= thermo_oil_demand.timeFrom.strftime('%H:%M') %></td>
    <td><%= thermo_oil_demand.timeTo.strftime('%H:%M') %></td>

    <!--<td><%= thermo_oil_demand.year_id %></td>-->

    
    <td><%= link_to image_tag("show.png", size: "20x20", alt: "Anzeigen"), thermo_oil_demand %>
    <%= link_to image_tag("edit.png", size: "20x20", alt: "Bearbeiten"), edit_thermo_oil_demand_path(thermo_oil_demand) %>
    <%= link_to image_tag("delete.png", size: "20x20", alt: "Löschen"), thermo_oil_demand, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    
  </tr>
<% end %>
</table>

<br />

