<% @hot_water_production_years.each do |hot_water_production_year| %>
  <tr>
    <td><%= hot_water_production_year.year_id %></td>
    <td><%= HotWaterProduction.find_by_id(hot_water_production_year.hotWaterProduction_id).kettleName %></td>
    <td><%= hot_water_production_year.fuelConsumption %> <%= hot_water_production_year.fuelConsumptionUnit %></td>
    <td><%= hot_water_production_year.kettleEnergyConsumption %> kWh/a</td>
    <td><%= hot_water_production_year.operationHours %> h</td>
    <!--<td><%= hot_water_production_year.kettleExitCompression %></td>
    <td><%= hot_water_production_year.kettleExitTemperature %></td>
    <td><%= hot_water_production_year.tempAdditionalWater %></td>
    <td><%= hot_water_production_year.tempCombustionAir %></td>
    <td><%= hot_water_production_year.tempExhaustBeforeWRG %></td>
    <td><%= hot_water_production_year.tempExhaustAfterWRG %></td>-->
    <td><%= hot_water_production_year.carbonDioxideExhaust %></td>
    
    <td><%= link_to image_tag("show.png", size: "20x20", alt: "Anzeigen"), hot_water_production_year %>
