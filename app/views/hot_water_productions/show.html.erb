    <%= link_to image_tag("delete.png", size: "20x20", alt: "Löschen"), hot_water_production_year, method: :delete, data: { confirm: 'Are you sure?' }  %></td>
  </tr>
<% end %>
<tr><th>Summe:</th><th colspan=5></th><th><%= link_to image_tag("new.png", size: "20x20", alt: "Anlegen"), new_hot_water_production_year_path %></th></tr>
