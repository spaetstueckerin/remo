<h1>Kälteverteilung</h1>

<table class="zentriert">
  <tr>
    <th>Kälteproduktion</th>
    <!--<th>Kälteverbrauch</th>-->
    <th>Durchmesser</th>
    <th>Isolation</th>
    <th>Länge</th>
    <!--<th>Volumestreamnenn</th>
    <th>Volumestreammin</th>
    <th>Volumestreammax</th>-->
    <th width=100>Aktion</th>
  </tr>

<% @cold_distributions.each do |cold_distribution| %>
  <tr>
    <td><%= ColdProduction.find_by_id(cold_distribution.coldProduction_id).buildType %></td>
    <!--<td><%= cold_distribution.coldConsumer_id %></td>-->
    <td><%= cold_distribution.aperture %> mm</td>
    <td><%= cold_distribution.isolation %> mm</td>
    <td><%= cold_distribution.length %> m</td>
    <!--<td><%= cold_distribution.volumeStreamNenn %></td>
    <td><%= cold_distribution.volumeStreamMin %></td>
    <td><%= cold_distribution.volumeStreamMax %></td>-->
    
    <td><%= link_to image_tag("show.png", size: "20x20", alt: "Anzeigen"), cold_distribution %>
    <%= link_to image_tag("edit.png", size: "20x20", alt: "Bearbeiten"), edit_cold_distribution_path(cold_distribution)  %>
    <%= link_to image_tag("delete.png", size: "20x20", alt: "Löschen"), cold_distribution, method: :delete, data: { confirm: 'Are you sure?' }  %></td>
  
  </tr>
<% end %>
</table>

