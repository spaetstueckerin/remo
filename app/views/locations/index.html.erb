<h1>Räumlichkeiten</h1>

<table  class="zentriert">
  <tr>
    <th>Name</th>
    <th>Beschreibung</th>
    <th>Quadratmeter</th>
    <th>Aktion</th>

  </tr>

<% @locations.each do |location| %>
  <tr>
    <td><%= location.name %></td>
    <td><%= location.description %></td>
    <td><%= location.squaremeter %> m&sup2;
    <td><%= link_to image_tag("show.png", size: "20x20", alt: "Anzeigen"), location %>
    <%= link_to image_tag("edit.png", size: "20x20", alt: "Bearbeiten"), edit_location_path(location) %>
    <%= link_to image_tag("delete.png", size: "20x20", alt: "Löschen"), location, method: :delete, data: { confirm: 'Are you sure?' }  %></td>
    
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Neuen Raum anlegen', new_location_path %>
