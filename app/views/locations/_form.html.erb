<%= form_for(@location) do |f| %>
  <% if @location.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@location.errors.count, "error") %> prohibited this location from being saved:</h2>

      <ul>
      <% @location.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<table>
<tr>
	<td><%= f.label :building_id, "Gebäude" %></td>
    <td><%= f.select :building_id, Building.all.map{|b| [b.name, b.id]}%></td>
	<td><%= f.label :floor, "Etage" %></td>
    <td><%= f.select :floor, ["-1", "0", "1", "2", "3", "4", "5"] %></td>
</tr>
<tr>
    <td><%= f.label :name, "Bezeichnung" %></td>
    <td colspan=3><%= f.text_field :name %></td>
</tr>
<tr>
    <td><%= f.label :squaremeter, "Quadratmeter" %></td>
    <td><%= f.text_field :squaremeter %> m2</td>
    <td><%= f.label :height, "Höhe" %></td>
    <td><%= f.text_field :height %> m</td>
</tr>
<tr>
    <td><%= f.label :description, "Beschreibung" %></td>
    <td colspan=3><%= f.text_area :description, size: "90x3" %></td>
</tr>
</table>

  <div class="actions">
    <%= f.submit "Absenden"%>
  </div>
<% end %>
