  <td><%= @thermo_oil_production.districtHeatMax %> Max MW</td>
</tr>

<tr>
  <th>Brennstoff:</th>
  <td><%= @thermo_oil_production.fuelType %></td>
  <th>Dichte:</th>
  <td><%= @thermo_oil_production.fuelDenseness %> kg/m&sup3;</td>
</tr>

<tr>
  <th>Brennwert:</th>
  <td><%= @thermo_oil_production.fuelValue %> <%= @thermo_oil_production.fuelValueUnit %></td>
  <th>Thermoölbezeichnung:</th>
  <td><%= @thermo_oil_production.thermoOilName %></td>
</tr>

<tr>
  <th>Abgaswärme- rückgewinnung:</th>
  <td><%= @thermo_oil_production.exhaustHeatRecovery %></td>
  <th>O2-Regelung:</th>
  <td><%= @thermo_oil_production.o2control %></td>
</tr>

<tr>
  <th>Kamin:</th>
  <td colspan=3><%= @thermo_oil_production.chimney %></td>
</tr>
