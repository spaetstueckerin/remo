<h1>Zählertypen</h1>

<table class="zentriert">
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Aktion</th>
  </tr>

<% @meter_types.each do |meter_type| %>
  <tr>
    <td><%= meter_type.name %></td>
    <td><%= meter_type.description %></td>

    <td width=100><%= link_to image_tag("show.png", size: "20x20", alt: "Anzeigen"), meter_type %>
    <%= link_to image_tag("edit.png", size: "20x20", alt: "Bearbeiten"), edit_meter_type_path(meter_type) %>
    <%= link_to image_tag("delete.png", size: "20x20", alt: "Löschen"), meter_type, method: :delete, data: { confirm: 'Are you sure?' }  %></td>

  </tr>
<% end %>
</table>

<br />

<%= link_to 'Neuen Zählertyp anlegen', new_meter_type_path %>
