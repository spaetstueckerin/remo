<%= form_for(@steam_demand) do |f| %>
  <% if @steam_demand.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@steam_demand.errors.count, "error") %> prohibited this steam_demand from being saved:</h2>

      <ul>
      <% @steam_demand.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
   <table>
    <tr>
      
      <td><%=f.label :steamConsumption_id, "Verbraucher" %></td>
      <td colspan="5"><%= f.select :steamConsumption_id, SteamProduction.all.map{|s| [s.kettleName, s.id]}%></td>
    </tr>
    <tr>
      <td><%= f.label :demandDate, "Am:" %></td>
      <td><%= f.date_select :demandDate %></td>

      <td><%= f.label :timeFrom, "Von:" %></td>
      <td><%= f.time_select :timeFrom %></td>
      <td><%= f.label :timeTo, "Bis:" %></td>
      <td><%= f.time_select :timeTo %></td>
    </tr>
  </table>
  
  <div class="actions">
    <%= f.submit "Absenden" %>
  </div>
<% end %>
