  </div>
  
    <% user = User.find_by_id(session[:user_id]) %>
    <% enterprise = Enterprise.find_by_id(user.enterprise_id) %>
    <%= f.hidden_field :enterprise_id, :value => enterprise.id %>
  
  <div class="field">
    <%= f.label "Datenart" %>
    <%= f.select :bdt_id, BusinessDataType.all.map{|b| [b.bd_type, b.id]}%>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
